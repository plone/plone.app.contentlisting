<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

    <div metal:fill-slot="main">
    <metal:main-macro define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1>
            Title or id
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p>
            Description
        </p>

        <div tal:replace="structure provider:plone.abovecontentbody" />

                <table class="listing">
                    <tr>
                        <th>Title</th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>                    
                        <th></th>                    
                        <th></th>                    
                    </tr>
                    
                    <tr tal:repeat="contents python:view.getContentListing()()">
                        <td><img tal:attributes="src string:${context/portal_url}/${contents/getIcon}"></td>
                        <td tal:content="contents/Title"></td>
                        <td tal:content="contents/Type"></td>
                        <td tal:content="contents/getURL"></td>
                        <td tal:content="contents/getPath"></td>
                        <td tal:content="contents/review_state"></td>
                        <td tal:content="contents/getDataOrigin"></td>
                        <td tal:content="contents/getText | nothing"></td>                        
                        <td tal:content="contents/getDataOrigin"></td>
                        <td tal:content="contents/Language"></td>
                        <td tal:content="contents/UID"></td>

                    </tr>
                </table>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </metal:main-macro>
    </div>

</body>
</html>
